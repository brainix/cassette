doctype html

html
    head
        meta(charset='utf-8')
        title= title
        if description
            meta(name='description', content=description)
        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
        link(rel='stylesheet', href=`/${hash}.style.css`)
        link(rel='icon', href='/icon.png')

        include includes/facebook.pug
        include includes/twitter.pug

    body
        block content
        block script
