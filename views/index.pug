doctype html

html
    head
        meta(charset='utf-8')
        title= title
        link(rel='stylesheet', href='/style.css')

        // Twitter Summary Card
        meta(name='twitter:card' content='summary')
        meta(name='twitter:site' content='@brainix')
        meta(name='twitter:title' content=twitterCard.title || 'Spool - Just music videos.')
        meta(name='twitter:description' content=twitterCard.description || "Spool takes the experience of channel surfing and puts it online. I hope that you enjoy using it as much as I've enjoyed building it.")
        meta(name='twitter:image' content=twitterCard.image || videos[0].artwork_url)

    body
        #app!= app
        script.
            videos = !{JSON.stringify(videos)};
        script(src='/bundle.js')
