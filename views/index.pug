doctype html

html
    head
        meta(charset='utf-8')
        title= title
        link(rel='stylesheet', href='/style.css')
        link(rel='icon', href='/icon.png')

        //- Open Graph Metadata
        meta(property='og:title' content=openGraph.title)
        meta(property='og:type' content=openGraph.type)
        meta(property='og:image' content=openGraph.image)
        meta(property='og:url' content=openGraph.url)
        meta(property='og:description' content=openGraph.description)
        meta(property='og:site_name' content=openGraph.siteName)
        if openGraph.video
            meta(property='og:video' content=openGraph.video)

        //- Twitter Summary Card
        meta(name='twitter:card' content='summary')
        meta(name='twitter:site' content='@brainix')
        meta(name='twitter:title' content=twitterCard.title)
        meta(name='twitter:description' content=twitterCard.description)
        meta(name='twitter:image' content=twitterCard.image)

        //- Mobile Safari
        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')

    body
        #app!= app
        script.
            videos = !{JSON.stringify(videos)};
        script(src='/bundle.js')
